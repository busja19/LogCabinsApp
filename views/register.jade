extends layout
block content
  .header
   .container
     center
      .row
        h1 Hello, Please create an account!
        .formHold
          form(method="post")
          fieldset
            label(for="name") User Name:
            input(name="name", type="text", placeholder="user name")
            label(for="email") Email Address:
            input(name="email", type="text", placeholder="your e-mail")
            label(for="password") Password:
            input(name="password", type="text", placeholder="Password")
           
           button.btn1(type="submit") Create Account
           
 