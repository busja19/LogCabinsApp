extends layout
block content
 .header
   .container
      .formHold
        form(method="post")
      .col-md-6.col-md-offset-3
        each row in res2
         form.form-horizontal(action='', method='post')
          fieldset
            legend.text-center Edit Product Specification
            .form-group
              label.col-md-3.control-label(for="newwall") External wall thickness:
              .col-md-9
                input#wall.form-control(name="newwall", type="text", placeholder="External wall thickness")
            // Email input
            .form-group
              label.col-md-3.control-label(for="newarea") Area:
              .col-md-9
                input#area.form-control(name="newarea", type="text", placeholder="Area")
            .form-group
              label.col-md-3.control-label(for="newroof") Roof Area:
              .col-md-9
                input#roof.form-control(name="newoof", type="text", placeholder="Roof Area")
            .form-group
              label.col-md-3.control-label(for="newroom") Number of rooms:
              .col-md-9
                input#room.form-control(name="newroom", type="text", placeholder="Number of rooms")
            .form-group
              label.col-md-3.control-label(for="newwindow") Window & door type:
              .col-md-9
                input#window.form-control(name="newwindow", type="text", placeholder="Window & door type")
            .form-group
              label.col-md-3.control-label(for="newwindows") Window Size mm:
              .col-md-9
                input#windows.form-control(name="newwindows", type="text", placeholder="Window Size mm")
            .form-group
              label.col-md-3.control-label(for="newdoors") Door size mm:
              .col-md-9
                input#doors.form-control(name="newdoors", type="text", placeholder="Door size mm")
                
             button.btn1(type="edit") Edit Product Specification
             

